                            <GridViewColumn Header="Họ tên" DisplayMemberBinding="{Binding hoten}" Width="120"/>
                            <GridViewColumn Header="Tên đăng nhập" DisplayMemberBinding="{Binding tendangnhap}" Width="120"/>
                            <GridViewColumn Header="Email" DisplayMemberBinding="{Binding email}" Width="200"/>
                            <GridViewColumn Header="Số điện thoại" DisplayMemberBinding="{Binding sodienthoai}" Width="120"/>
                            <GridViewColumn Header="Quyền hạn" DisplayMemberBinding="{Binding quyenhan}" Width="80"/>
                        </GridView>
