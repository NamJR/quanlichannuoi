<UserControl x:Class="quanlichannuoi.View.DonViCapHuyenControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:quanlichannuoi.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="HuyenDataGrid" AutoGenerateColumns="False" Margin="10" IsReadOnly="True" SelectionChanged="HuyenDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã Huyện" Binding="{Binding MaHuyen}" Width="100"/>
                <DataGridTextColumn Header="Tên Huyện" Binding="{Binding TenHuyen}" Width="200"/>
                <DataGridTextColumn Header="Tỉnh" Binding="{Binding Tinh}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
